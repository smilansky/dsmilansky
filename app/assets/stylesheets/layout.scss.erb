@import "bootstrap";

@font-face {
  font-family: "futura";
  src: url("<%= asset_path('FuturaLT-Book.ttf') %>") format("truetype");
}

@font-face {
  font-family: "proxima nova";
  src: url("<%= asset_path('ProximaNova-Regular.otf') %>") format("opentype");
}

/* tags */


body {
  border-top: 8px solid #428bca;
  height: 100%;
  font-family: 'proxima nova';
}

section { 
  overflow: auto;
}

textarea {
  resize: vertical;
}


/* Application Layout */

.wrap { 
  height: 100%;
  height: auto !important;
  margin: 0 auto; 
  max-width: 620px;
  min-height: 100%;
  padding: 0 0 60px;
  text-transform: uppercase;
  width: auto;
}

.content a:hover {
  color: green !important;
  text-decoration: none;
}

.normal-text {
  text-transform: none;
}

.application {
  margin-top: 30px;
  min-height: 100%;
}

.container {
  max-width: 620px;
  width: auto;
}

.center {
  text-align: center;
}

#logo {
  color: #111;
  float: left;
  font-family: 'futura';
  font-size: 40px;
  font-weight: 400;
  letter-spacing: 0.05em;  
  line-height: 1.2em;
  margin: 0px;
  text-decoration: none;
}

.page-divider {
  border-bottom: 1px solid #ddd;
  margin-bottom: 20px;
}

/* Nav */

.top-nav {
  margin-bottom: 30px;
  margin: 0 auto;
  width: 50%;
}

#nav-list {
}

.top-nav ul {
  font-family: 'futura';
  list-style: none;
  list-style-image: none; 
  margin: 0px;
}

.top-nav ul li {
  float: left;
  letter-spacing: 1px;
  margin-right: 30px;
}

.top-nav ul li a {
  color: #999;
  display: inline-block;
  font-size: 18px;
  line-height: 26px;
  padding: 15px 0;
  text-align: center;
}

ul li a:hover {
  color: #111;
  text-decoration: none;
}

.top-nav li:last-child {
  margin-right: 0px;
}


